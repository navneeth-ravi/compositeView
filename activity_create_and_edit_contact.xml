<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.CreateAndEditContactActivity"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="20dp">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" >
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_symbol"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_contact"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/blue"
                android:textAllCaps="false"
                android:layout_gravity="end"
                android:paddingEnd="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/contact_icon1"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/default_user_ic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="40dp"
                        android:src="@drawable/account_circle"
                        android:scaleType="fitCenter" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/custom_profile"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="500dp"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/user_ic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/eiffel_tower"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Button
                    android:id="@+id/add_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/add_a_photo"
                    android:layout_below="@id/contact_icon1"
                    android:layout_alignEnd="@id/contact_icon1"
                    android:layout_marginEnd="25dp"
                    app:borderWidth="0dp"
                    android:backgroundTint="@color/black"
                    app:elevation="0dp"/>

            </RelativeLayout>


            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edit_text_border"
                android:autofillHints="+91" />
            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                android:padding="20dp"
                android:inputType="textPersonName"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edit_text_border"/>
            <EditText
                android:id="@+id/number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/number_1"
                android:padding="20dp"
                android:inputType="phone"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edit_text_border"/>
            <EditText
                android:id="@+id/number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/number_2"
                android:inputType="phone"
                android:padding="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edit_text_border"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/e_mail"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/edit_text_border"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>